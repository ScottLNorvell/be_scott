<div class="offset-by-four four columns">
	<h2>what <span class="freal">mad skills</span> do you posess?</h2>
	<h4>(as Scott...)</h4>
</div>

<div class="four columns">

<form action="/scott/new_mad_skill" method="post">
	<div>
		<label for="skill">SKILL:</label>
		<input type="text" name="skill[skill]">
	</div>
	<div>
		<label for="genre">GENRE:</label>
		<select name="skill[genre]" >
			<% @skill_genres.each do |skill_genre| %>
				<option value="<%= skill_genre %>"><%= skill_genre %></option>
			<% end %>
		</select>
	</div>
	<div>
		<label for="level">SKILL LEVEL:</label>
		<select name="skill[level]" >
			<% (1..10).each do |i| %>
				<option value="<%= i %>"><%= i %></option>
			<% end %>
		</select>
			
	</div>
	<input type="submit" value="acquire mad skill">
</form>
</div>
