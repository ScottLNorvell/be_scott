<div class="offset-by-three five columns">
	<h2>what <span class="freal">eclectic instruments</span> do you own?</h2>
	<h4>(as Scott...)</h4>
</div>
<div class="one columns">&nbsp;&nbsp;</div>
<div class="five columns">

<form action="/scott/<%= @post_path %>" method="post">
	<div>
		<label for="name">NAME:</label>
		<input type="text" name="ei[name]" value="<%= @eclectic_instrument.present? ? @eclectic_instrument.name : "" %>">
	</div>
	<div>
		<label for="genre">GENRE:</label>
		<select name="ei[genre]" >
			<% @instrument_genres.each do |instrument_genre| %>
				<option value="<%= instrument_genre %>"><%= instrument_genre %></option>
			<% end %>
		</select>
	</div>
	<div>
		<label for="level">PLAYABILITY LEVEL:</label>
		<select name="ei[playability_level]" >
			<% (1..10).each do |i| %>
				<option value="<%= i %>"><%= i %></option>
			<% end %>
		</select>
			
	</div>
	<input type="submit" value="<%= @eclectic_instrument.present? ? 'edit' : 'acquire' %> eclectic instrument">

	<% if @eclectic_instrument.present? %>
		<label for="delete">-OR-</label>
		<a class="button" href="/scott/delete_eclectic_instrument/<%= @eclectic_instrument.id %>">delete instrument</a>
		<a href="/scott" class="button">cancel</a>

	<% end %>
</form>
</div>
